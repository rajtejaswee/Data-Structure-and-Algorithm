{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build and run (GCC 15)",
            "type": "shell",
            "command": "/bin/bash",
            "args": [
                "-c",
                "mkdir -p \"${fileDirname}/binary_files\" && /opt/homebrew/bin/g++-15 -std=c++17 -O2 -Wall \"${file}\" -o \"${fileDirname}/binary_files/${fileBasenameNoExtension}\" && \"${fileDirname}/binary_files/${fileBasenameNoExtension}\" < \"${fileDirname}/input.txt\" > \"${fileDirname}/output.txt\""
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}
